<div class='container px-5 px-sm-0 mt-3'>
  <div class='row'>
    <div class='col-md-3'>
    <%= render 'users/info', user: @user, book: @book %>
    <%#= render [部分テンプレートファイルの指定], [ローカル変数]:[渡す値] %>
  </div>
   <div class='col-md-8 offset-md-1'>
    <h2>Books</h2>
    <table class='table table-hover table-inverse'>
      <thead>
       <tr>
        <th>Title</th>
        <th>Opinion</th>
        <th colspan="3"></th>
       </tr>
      </thead>
    <tbody>
      <% if @book.errors.any? %>
       <%= @book.errors.count %> error prohibited this obj from being saved:
     <ul>
       <% @book.errors.full_messages.each do |message| %>
     <li><%= message %></li>
       <% end %>
     </ul>
      <% end %>

       <% @books.each do |book| %>
      <tr>
       <td>
        <%= link_to user_path(book.user.id) do %> <%#doとendで範囲を指定する（doとendの間がリンクになる%>
         <%= image_tag book.user.get_profile_image(100,100) %> <!--<img src="https://bookers-level2.herokuapp.com/rails/active_storage/representations/redirect/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaHBBOVROQVE9PSIsImV4cCI6bnVsbCwicHVyIjoiYmxvYl9pZCJ9fQ==--4ead1361a8770dbfa9e923d6015bc75319880d57/eyJfcmFpbHMiOnsibWVzc2FnZSI6IkJBaDdCem9MWm05eWJXRjBTU0lJYW5CbkJqb0dSVlE2RkhKbGMybDZaVjkwYjE5c2FXMXBkRnNIYVZWcFZRPT0iLCJleHAiOm51bGwsInB1ciI6InZhcmlhdGlvbiJ9fQ==--596aecbd1e45058af6bad2ccaa755120cd0daa59/default-image.jpg" />-->
        <% end %>
       </td>
        <td><%= link_to book.title, book_path(book.id) %></td>
        <td><%= book.body %></td>
         <!--<a class="book_31031" href="/books/31031">ワンピース</a>-->
      </tr>
        <% end %>
    </tbody>
    </table>
    </div>
  </div>
</div>