<div class = 'container'>
 <div class = 'row'>
  <div class = "col-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">

  <h2>User info</h2>

  <div id="error_explanation">
   <% if @user.errors.any? %>
   <%= @user.errors.count %> error prohibited this obj from being saved:
  <ul>
    <% @user.errors.full_messages.each do |message| %>
      <li><%= message %></li>
    <% end %>
  </ul>
   <% end %>
  </div>

   <%= form_with model: @user , method: :patch do |f| %>

    <label for = "inputName">Name</label><br>
     <%= f.text_field :name,class: "form-control name" %><br>

    <label for = "Image">Image</label><br>
     <%= f.file_field :profile_image,class: "form-control-file user_image" %><br>

    <label for = "Introduvtion">Introduvtion</label><br>
     <%= f.text_area :introduction ,class: "form-control introduction" %><br>

     <%= f.submit "Update User" ,class: "btn btn-secondary" %><br>
   <% end %>
   </div>
  </div>
 </div>



