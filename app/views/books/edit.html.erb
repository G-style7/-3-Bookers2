    <div class='container'>
  <div class='row'>
    <div class="cok-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book do |f| %>
      
      <label for= "book_title">Title</label>
      <%= f.text_field :name, class: "form-control book_title", id:"book_title" %><br>
      
      <label for= "book_opinion">Opinion</label>
      <%= f.text_area :name, class: "form-control book_body", id:"book_body" %><br>
      
      <%= f.submit "Update Book" , class: "btn btn-success" %> 
      <% end %>
      
      <%= link_to "Show", book_path(@book), method: :patch %>
    </div>
  </div>
    </div>