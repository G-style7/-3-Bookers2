    <div class='container'>
  <div class='row'>
    <div class="cok-sm-12 col-md-8 col-lg-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>
      <%= form_with model: @book, method: :patch do |f| %>

      <!--<label for= "book_title">Title</label>-->
      <%= f.label :title %>
      <%= f.text_field :title, class: "form-control book_title" %><br>

      <label for= "book_opinion">Opinion</label>
      <%= f.text_area :body, class: "form-control book_body" %><br>

      <%= f.submit "Update Book" , class: "btn btn-success" %><br>

      <%= link_to "Show", book_path(@book.id) %> |
      <%= link_to "Back", books_path %>

      <% end %>
    </div>
  </div>
    </div>